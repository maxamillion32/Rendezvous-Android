<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent"
android:background="#e9e9e9">

<com.parse.ParseImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/commentImage"
    android:layout_marginLeft="10dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:src="@drawable/cinema"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:text="Talha Uyar"
    android:textSize="25dp"
    android:id="@+id/commentatorName"
    android:gravity="center"
    android:textColor="#000000"
    android:layout_above="@+id/ratingBar"
    android:layout_toRightOf="@+id/commentImage"
    android:layout_toEndOf="@+id/commentImage" />



<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="#000000"
    android:layout_below="@+id/commentImage"
    android:id="@+id/view"
    android:layout_marginTop="1dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:stepSize="0.5"
        android:progressBackgroundTint="#baa66766"
        android:progressTint="#757575"
        android:numStars="5"
        android:isIndicator="true"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/commentImage"
        android:layout_toRightOf="@+id/commentImage" />
</RelativeLayout><!-- From: file:/C:/Users/Burak%20M/Desktop/Parse-Starter-Project-1.8.3/ParseStarterProject/res/layout/comment_row_layout.xml -->