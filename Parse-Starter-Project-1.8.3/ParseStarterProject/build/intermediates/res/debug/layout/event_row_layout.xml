<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:background="#e9e9e9"
    >

    <com.parse.ParseImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/eventImage"
        android:src="@drawable/cinema"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/eventName"
        android:text="Event Name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eventImage"
        android:layout_toEndOf="@+id/eventImage"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/organizerName"
        android:text="Organizer Name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eventName"
        android:layout_toEndOf="@+id/eventName"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/date"
        android:text="Date"
        android:layout_below="@+id/eventName"
        android:layout_toRightOf="@+id/eventImage"
        android:layout_toEndOf="@+id/eventImage"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/place"
        android:text="Place"
        android:layout_below="@+id/eventName"
        android:layout_toRightOf="@+id/eventName"
        android:layout_toEndOf="@+id/eventName"
        android:gravity="center"
        android:textColor="#000000" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/eventImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />
</RelativeLayout><!-- From: file:/C:/Users/Burak%20M/Desktop/Parse-Starter-Project-1.8.3/ParseStarterProject/res/layout/event_row_layout.xml -->