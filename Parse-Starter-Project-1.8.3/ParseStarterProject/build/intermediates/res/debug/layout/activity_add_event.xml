<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddEvent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/progress1"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/cinema"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/cinema"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/concert"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/concert"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/party"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/party"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/theatre"
            android:layout_row="5"
            android:layout_column="1"
            android:text="@string/theatre"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/seminar"
            android:layout_row="6"
            android:layout_column="1"
            android:text="@string/seminar"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:id="@+id/other"
            android:layout_row="7"
            android:layout_column="1"
            android:text="@string/other"
            android:drawableLeft="@drawable/ic_action_new"
            android:paddingRight="45dp" />

    </GridLayout>


</RelativeLayout>
